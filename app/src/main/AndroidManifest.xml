            android:name=".activities.admin.AddPoojaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.authentication.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.user.UserActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".activities.authentication.LoginActivity"
            android:exported="true"></activity>
    </application>

</manifest>