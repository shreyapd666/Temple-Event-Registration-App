<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.admin.AddPoojaActivity">


    <TextView
        android:id="@+id/add_pooja_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Add Pooja"
        android:textColor="@color/orange_accent_color"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/pooja_name"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/orange_accent_color"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Pooja Name"
        android:inputType="textPersonName"
        android:textColor="@color/grey_accent_color"
        android:textColorHint="@color/grey_accent_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_pooja_label" />

    <EditText
        android:id="@+id/pooja_price"
        android:layout_width="253dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange_accent_color"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColor="@color/grey_accent_color"
        android:textColorHint="@color/grey_accent_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pooja_name" />


    <EditText
        android:id="@+id/pooja_date"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange_accent_color"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Date: DD-MM-YYYY"
        android:inputType="date"
        android:textColor="@color/grey_accent_color"
        android:textColorHint="@color/grey_accent_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pooja_price" />

    <EditText
        android:id="@+id/pooja_desc"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="@color/orange_accent_color"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:gravity="start|top"
        android:hint="Pooja Description"
        android:inputType="textMultiLine"
        android:textColor="@color/grey_accent_color"
        android:textColorHint="@color/grey_accent_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pooja_date" />

    <Button
        android:id="@+id/add_pooja_button"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Pooja"
        android:textSize="20sp"
        app:backgroundTint="@color/red_accent_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pooja_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>